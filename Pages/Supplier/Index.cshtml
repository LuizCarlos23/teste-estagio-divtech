    </script>
}


@section Css {
    <style>
        tbody tr:hover {
            background-color: rgb(225, 225, 225);
        }

        .table-title {
            color: white;
            background-color: #435d7d;
            padding: 10px;
            border-radius: 5px 5px 0 0;
        }

        .actions button a {
            width: 100%;
            height: 100%;
        }
    </style>
}